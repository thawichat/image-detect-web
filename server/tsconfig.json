    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": [
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}